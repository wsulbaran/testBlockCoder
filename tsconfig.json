{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018' or 'ESNEXT'. */
    "module": "commonjs",                      /* Specify library files to be included in the compilation. */
    "allowJs": true,                            /* Concatenate and emit output to single file. */
    "outDir": "./build", 
    "moduleResolution": "node" ,                       /* Enables experimental support for emitting type metadata for decorators. */
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}